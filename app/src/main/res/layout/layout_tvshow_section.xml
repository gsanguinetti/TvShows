<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSectionView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="@dimen/tvshow_details_section_margin"
    android:layout_marginLeft="@dimen/tvshow_details_section_margin"
    android:layout_marginRight="@dimen/tvshow_details_section_margin"
    android:layout_marginStart="@dimen/tvshow_details_section_margin"
    app:cardElevation="4dp"
    app:contentPaddingTop="16dp"
    app:contentPaddingBottom="24dp">

    <LinearLayout
        android:id="@+id/contentRootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sectionTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <FrameLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>